<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundmain"
    tools:context=".screen3">


    <ImageButton
        android:layout_width="77dp"
        android:layout_height="68dp"
        android:background="@drawable/left_arrow"
        android:scaleType="fitXY"
        android:src="@drawable/left_arrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@null"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@null"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:gravity="center_horizontal"
        android:text="Forgot Password"
        android:textColor="@color/white"
        android:textSize="30dp"
        />


    <TextView
        android:id="@+id/desx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:gravity="center_horizontal"
        android:text="Enter your email address which you used to create account and we will mail you the link"
        android:textColor="@color/white"
        android:textSize="15dp"

        />

    <EditText
        android:id="@+id/editText_pass"
        android:layout_width="367dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="366dp"
        android:background="@drawable/edittext_rounded_corners"
        android:backgroundTint="@color/purple_200"
        android:hint="New Password"
        android:textColorHint="@color/cardview_shadow_start_color"
        app:layout_constraintLeft_toLeftOf="@null"
        app:layout_constraintTop_toBottomOf="@id/desx"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/editText_confirm_pass"
        android:layout_width="367dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:hint="Confirm Password "
        android:layout_marginTop="433dp"
        android:background="@drawable/edittext_rounded_corners"
        android:backgroundTint="@color/purple_200"
        android:textColorHint="@color/cardview_shadow_start_color"
        app:layout_constraintLeft_toLeftOf="@null"
        app:layout_constraintTop_toBottomOf="@id/desx"
        tools:visibility="visible" />

    <Button
        android:contentDescription="Post your Add"
        android:text="Submit"
        android:id="@+id/submit"
        android:layout_width="330dp"
        android:layout_height="53dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="45dp"
        android:gravity="center"
        android:background="@drawable/oval_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/desx"
        />


</RelativeLayout>